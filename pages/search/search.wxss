page{
  width:100%;
}
.box{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  background-color: #3A3A3A; 
  clear:left;
}
.search{
  width:100%;
  height:100rpx;
  margin-top:20rpx;
  padding-left:20rpx;
}
input{
  width:70%;
  height:70rpx;
  border:2rpx solid #CCC;
  float:left;
  border-radius: 5px;
  font-size:30rpx;
  padding-left:20rpx; 
  color:#fff;
}
button{
  width:20%;
  height:70rpx;
  background-color: orange;
  font-size:30rpx;
  font-weight: 700;
  color:#fff;
  line-height: 70rpx;
}
.results{
  width:100%;
  padding-left:20rpx;
  color:#fff;
  font-size:30rpx;
    background-color: #3A3A3A; 

}
.tips{
  line-height:40rpx; 
}
.search-info{
  padding-top:30rpx;
}
.searchRes{
  width:33.33%;
  height:350rpx;
  float: left;
}
.searchRes-img{
  width:80%;
  display: block;
  margin:0 auto;
}
.movie-name{
text-align: center;
font-size: 25rpx;
line-height: 40rpx;
}
.floatfix:after{
    content:"";
    display:table;
    clear:both;
}